{
  "name": "hospital-lib",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "dependencies": {
    "@types/node": "10.12.0",
    "alsatian": "2.3.0",
    "ts-loader": "9",
    "ts-node": "10.9.1",
    "typescript": "5.1.3",
    "webpack": "5",
    "webpack-cli": "4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "build:vite": "vite build",
    "build:dev": "rm -rf ./dist && webpack --config ./config/webpack.config.js --mode development",
    "build:prod": "rm -rf ./dist && webpack --config ./config/webpack.config.js --mode production",
    "test": "ts-node --project ./tsconfig.json ./config/run-test",
    "test:jest": "jest",
    "test:watch": "jest --watchAll",
    "lint": "npx eslint",
    "format": "prettier --write \"**/*.ts\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "vite": "^5.4.8"
  }
}
